<section id="login">
  <div class="row">

    <div class="col-md-6 col-sm-12 p-0">
      <div class="img" style="max-width:100%; height:auto;">
        <img src="images/weights.jpg" alt="weights" class="img-fluid" />

        <div class="overlay-login p-4">
          <h4>Login</h4>
          <h5>Welcome Back!</h5>
          <form class="form login-form">
            <div class="form-group p-2">
              <label for="email-login">Email:</label>
              <br />
              <input class="form-input" type="text" id="email-login" />
            </div>

            <div class="form-group p-2">
              <label for="password-login">Password:</label>
              <br />
              <input class="form-input" type="password" id="password-login" />
            </div>

            <div class="form-group p-2">
              <button class="btn btn-primary login" type="submit">Login</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-sm-12 p-0">
      <div class="img" style="max-width:100%; height:auto;">
        <img src="images/stretch.jpg" alt="stretch" class="img-fluid" />

        <div class="overlay-newUser p-4">
          <h4>Create New User</h4>
          <form class="form signup-form">
            <div class="form-group p-2">
              <label for="username-create">Userame:</label>
              <br />
              <input class="form-input" type="text" id="username-create" />
            </div>

            <div class="form-group p-2">
              <label for="email-create">Email:</label>
              <br />
              <input class="form-input" type="text" id="email-create" />
            </div>

            <div class="form-group p-2">
              <label for="password-create">Create Password:</label>
              <br />
              <input class="form-input" type="password" id="password-create" />
            </div>

            <div class="form-group p-2">
              <button
                class="btn btn-primary create"
                type="submit"
              >Create</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

